<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold">City Events</h1>
    <p class="lead text-muted">Upcoming events in Winnipeg.</p>
  </div>

  <% if @events.present? %>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title"><%= event.name %></h5>
              <p class="card-text"><%= truncate(event.description, length: 80) %></p>
              <p><strong>Date:</strong>
                <%= event.event_date.present? ? event.event_date.strftime('%Y-%m-%d') : "Not Set" %>
              </p>
              <p><strong>Location:</strong> <%= event.location %></p>
              <%= link_to 'View Details', event_path(event), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">No events available.</p>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to 'Create New Event', new_event_path, class: "btn btn-primary" %>
  </div>
</div>
