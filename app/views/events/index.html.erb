<div class="container my-5">
  <!-- Page Header -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-primary"><i class="bi bi-calendar-event"></i> City Events</h1>
    <p class="lead text-muted">Discover upcoming events in Winnipeg. Stay informed and plan ahead!</p>
  </div>

  <% if @events.present? %>
    <div class="row g-4">
      <% @events.each do |event| %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold text-primary"><%= event.name %></h5>
              <p class="card-text text-muted"><%= truncate(event.description, length: 80) %></p>
              <p><i class="bi bi-calendar"></i> <strong>Date:</strong>
                <%= event.event_date.present? ? event.event_date.strftime('%B %d, %Y') : "Not Set" %>
              </p>
              <p><i class="bi bi-geo-alt"></i> <strong>Location:</strong> <%= event.location %></p>
              <%= link_to 'View Details', event_path(event), class: "btn btn-outline-primary mt-auto" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">No events available at the moment.</p>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to 'Create New Event', new_event_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
