<div class="container my-5">
  <!-- Event Header -->
  <div class="text-center mb-4">
    <h1 class="fw-bold text-primary"><%= @event.name %></h1>
    <p class="lead text-muted">Detailed information about this event.</p>
  </div>

  <!-- Event Card -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
      <p><strong><i class="bi bi-card-text"></i> Description:</strong><br>
        <%= @event.description.presence || "No description available for this event." %>
      </p>
      <p><strong><i class="bi bi-calendar-event"></i> Date:</strong>
        <%= @event.event_date.present? ? @event.event_date.strftime('%B %d, %Y') : "Not Set" %>
      </p>
      <p><strong><i class="bi bi-geo-alt"></i> Location:</strong> <%= @event.location %></p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="text-center mt-4">
    <%= link_to 'Back to Events', events_path, class: "btn btn-secondary btn-lg me-2" %>
    <%= link_to 'Edit Event', edit_event_path(@event), class: "btn btn-warning btn-lg" %>
  </div>
</div>

