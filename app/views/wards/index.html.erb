<h1>Wards#index</h1>
<p>Find me in app/views/wards/index.html.erb</p>

<h1>Wards</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>District</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= ward.name %></td>
        <td><%= ward.district %></td>
        <td><%= link_to 'Show', ward_path(ward), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

